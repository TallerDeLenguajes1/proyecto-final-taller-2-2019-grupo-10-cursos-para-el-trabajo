<Window x:Class="AplicacionPrincipal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        FontSize="13"
        xmlns:local="clr-namespace:AplicacionPrincipal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="Tomato">
            <Label Name="lblTitulo" Content="Sistema Informatico" Height="60" Margin="225,10,0,0" VerticalAlignment="Top" Width="380" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" FontWeight="Bold" Foreground="White"/>
        </Border>
        <Button x:Name="btnAltaTutor" Content="Alta de Tutor" HorizontalAlignment="Center" Height="50" Margin="0,80,0,-215" VerticalAlignment="Top" Width="450" Background="LightSeaGreen" Foreground="Black" FontSize="25" FontWeight="DemiBold" Grid.Row="1" Click="btnAltaTutor_Click"/>
        <Button x:Name="btnAltaInstructor" Content="Alta de Instructor" HorizontalAlignment="Center" Height="50" Margin="146,20,146,0" VerticalAlignment="Top" Width="450" Background="LightSeaGreen" Foreground="Black" FontSize="25" FontWeight="DemiBold" Grid.Row="1" Click="btnAltaInstructor_Click"/>
        <Button x:Name="btnAltaBeneficiario" Content="Alta de Beneficiario" HorizontalAlignment="Center" Height="50" Margin="146,140,146,0" VerticalAlignment="Top" Width="450" Background="LightSeaGreen" Foreground="Black" FontSize="25" FontWeight="DemiBold" Grid.Row="1" Click="btnAltaBeneficiario_Click"/>
        <Button x:Name="btnAltaCurso" Content="Alta de Curso" HorizontalAlignment="Center" Height="50" Margin="171,200,171,0" VerticalAlignment="Top" Width="450" Background="LightSeaGreen" Foreground="Black" FontSize="25" FontWeight="DemiBold" Grid.Row="1" Click="btnAltaCurso_Click"/>

    </Grid>
</Window>
